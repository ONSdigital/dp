{
    "stacks": [
        {
            "id": "ons-website",
            "name": "ONS website",
            "log_path": "./logs",
            "log_pattern": "$STACK_ID$/$TASK_ID$/$INSTANCE_ID$/$NAME$.log",
            "env": {
                "inherit_all": false,
                "inherit": [
                    "PATH",
                    "USER",
                    "HOME",
                    "GOPATH"
                ],
                "remove": [],
                "set": []
